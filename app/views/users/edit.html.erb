                       <%= image_tag 'engranaje.png', alt: '設定のイメージ' %>
              </div>

            </div>

          </div>

          <button class="scroll-button right" type="button">&#9654;</button>
        </div>

        <div class="edit-profile-button-box">
          <%= form.submit "更新", class: "edit-profile-button"%>
        </div>

      <% end %>
    </div>
  </div>

