<%= form_with model: post, local: true, html: { id: 'post-form' } do |form| %>
  <div class="form-group">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, class: 'form-title-control' %>
  </div>
  <div class="form-group">
    <%= form.label :content, "本文" %>
    <%= form.text_area :content, class: 'form-content-control' %>
  </div>
  <div class="form-button">
    <%= form.submit '投稿する', class: 'post-button-complete' %>
  </div>
<% end %>
